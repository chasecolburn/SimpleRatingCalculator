<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView android:text="4.2"
        android:id="@+id/rating_rounded_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="48sp"/>

    <TextView android:text="4.235465"
        android:id="@+id/rating_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#666666"
        android:textSize="32sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDecreaseRating"
            android:tag="5"
            android:text="◄"
            />

        <TextView
            android:id="@+id/rating_5_stars_text_view"
            style="@style/Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"/>

        <TextView
            style="@style/Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onIncreaseRating"
            android:tag="5"
            android:text="►"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDecreaseRating"
            android:tag="4"
            android:text="◄"
            />

        <TextView
            android:id="@+id/rating_4_stars_text_view"
            style="@style/Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"/>

        <TextView
            style="@style/Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onIncreaseRating"
            android:tag="4"
            android:text="►"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDecreaseRating"
            android:tag="3"
            android:text="◄"
            />

        <TextView
            android:id="@+id/rating_3_stars_text_view"
            style="@style/Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"/>

        <TextView
            style="@style/Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onIncreaseRating"
            android:tag="3"
            android:text="►"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDecreaseRating"
            android:tag="2"
            android:text="◄"
            />

        <TextView
            android:id="@+id/rating_2_stars_text_view"
            style="@style/Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"/>

        <TextView
            style="@style/Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onIncreaseRating"
            android:tag="2"
            android:text="►"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDecreaseRating"
            android:tag="1"
            android:text="◄"
            />

        <TextView
            android:id="@+id/rating_1_stars_text_view"
            style="@style/Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"/>

        <TextView
            style="@style/Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onIncreaseRating"
            android:tag="1"
            android:text="►"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/rating_total_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="179 total"/>
</LinearLayout>
